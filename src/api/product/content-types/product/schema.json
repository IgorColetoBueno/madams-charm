{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Products",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Description": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 40,
      "minLength": 3
    },
    "PromotionalText": {
      "type": "richtext"
    },
    "Value": {
      "type": "decimal",
      "default": 0,
      "required": true,
      "min": 1
    },
    "Quantity": {
      "type": "integer"
    },
    "Size": {
      "type": "enumeration",
      "enum": [
        "PP",
        "P",
        "M",
        "G",
        "GG",
        "XG"
      ],
      "required": true
    },
    "Photos": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    }
  }
}
